@page
@model ProjectBlogger.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>MyBlogs</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MyBlogs.MyBlogsID" />
            <div class="form-group">
                <label asp-for="MyBlogs.BlogName" class="control-label"></label>
                <input asp-for="MyBlogs.BlogName" class="form-control" />
                <span asp-validation-for="MyBlogs.BlogName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyBlogs.Description" class="control-label"></label>
                <input asp-for="MyBlogs.Description" class="form-control" />
                <span asp-validation-for="MyBlogs.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyBlogs.ActualBlog" class="control-label"></label>
                <input asp-for="MyBlogs.ActualBlog" class="form-control" />
                <span asp-validation-for="MyBlogs.ActualBlog" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyBlogs.ImageUrl" class="control-label"></label>
                <input asp-for="MyBlogs.ImageUrl" class="form-control" />
                <span asp-validation-for="MyBlogs.ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MyBlogs.ThumbUrl" class="control-label"></label>
                <input asp-for="MyBlogs.ThumbUrl" class="form-control" />
                <span asp-validation-for="MyBlogs.ThumbUrl" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="MyBlogs.BlogOfTheWeek" /> @Html.DisplayNameFor(model => model.MyBlogs.BlogOfTheWeek)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="MyBlogs.UserID" class="control-label"></label>
                <select asp-for="MyBlogs.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="MyBlogs.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
